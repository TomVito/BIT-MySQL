<h1 class="mt-5 mb-5">List of all authors</h1>

{{#if messages}}
    <div class="alert alert-{{status}}">{{messages}}</div>
{{/if}}

{{#if authors}}

<table class="table table-striped table-bordered text-center">
    <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Options</th>
    </thead>
    
    <tbody>
    {{#each authors}}
        <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{surname}}</td>
            <td>
                <a href="/edit-author/{{id}}" class="btn btn-primary">Edit</a>
                <a href="/delete-author/{{id}}" class="btn btn-danger btn-delete-client">Delete</a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

<nav aria-label="Page navigation example">
  <ul class="pagination">
        {{#each pager}}
            <li class="page-item"><a class="page-link" href="/list-authors/page/{{this}}">{{this}}</a></li>
        {{/each}}
  </ul>
</nav>

{{else}}

<h4>No such clients in database</h4>

{{/if}}