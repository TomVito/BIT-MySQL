<h1 class="mt-5 mb-5">List of all books</h1>

{{#if messages}}
    <div class="alert alert-{{status}}">{{messages}}</div>
{{/if}}

<table class="table table-striped table-bordered text-center">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Pages</th>
        <th>ISBN</th>
        <th>Description</th>
        <th>Author</th>
        <th>Options</th>
    </tr>

    {{#each books}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{pages}}</td>
            <td>{{isbn}}</td>
            <td>{{short_description}}</td>
            <td>{{#if name}}{{name}}{{/if}} {{#if surname}}{{surname}}{{/if}}</td>
            <td>
                <a href="/edit-book/{{id}}" class="btn btn-primary">Edit</a>
                <a href="/delete-book/{{id}}" class="btn btn-danger btn-delete-book">Delete</a>
            </td>
        </tr>
    {{/each}}
</table>